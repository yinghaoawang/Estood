<%= stylesheet_link_tag 'signin' %>
<div class="container">
  <%= form_for :user, url: signup_path, method: 'post', html: { class: 'form-signin' } do |f| %>
    <h2 class="form-signin-heading">Sign Up</h2>

    <%= f.label :email, 'Email address ', class: 'sr-only' %>
    <%= f.email_field :email, placeholder: 'Email address', autofocus: '', type: 'email', class: 'form-control' %>

    <%= f.label :name, 'Name ', class: 'sr-only' %>
    <%= f.text_field :name, placeholder: 'Name', type: 'text', class: 'form-control' %>

    <%= label_tag :Password, 'Password ', class: 'sr-only' %>
    <%= f.password_field :password, placeholder: 'Password', type: 'password', class: 'form-control' %>

    <%= label_tag :confirm_password, 'Confirm Password ', class: 'sr-only' %>
    <%= f.password_field :confirm_password, placeholder: 'Confirm Password', type: 'password', class: 'last form-control' %>

    <%= f.submit 'Sign Up', class: 'btn btn-lg btn-primary btn-block' %>

  <% end %>
  <!--< %= button_to 'Log in', login_path, method: 'get', form_class: 'form-signin', class: 'btn btn-lg btn-info btn-block second-btn' %>-->
</div>
