<div class="followers">
  <h4><%= @user.followers.count %> Followers</h4>
  <% fcount = 0 %>
  <% @user.followers.each do |follower_id| %>
    <% fcount += 1 %>
    <% follower = User.find follower_id %>
    <%= link_to follower.name, action: 'show', id: follower_id, method: 'get' %>
  <% end %>
  <% if fcount < 1 %>
    <%= 'Not followed by anyone' %>
  <% end %>
</div>
