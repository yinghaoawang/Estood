<%= stylesheet_link_tag 'main' %>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </button>
      <%= link_to 'Estood', '/', class: 'navbar-brand' %>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right navbar-form">

        <% if logged_in? %>
          <li><input type="text" class="form-control" placeholder="Search..."></li>

          <li><%= link_to current_user.name, user_path %></li>
          <li><%= link_to 'Logout', logout_path, method: 'delete' %></li>

        <% else %>

          <!-- TODO MAKE WORKS GOOD--> 
          <div class="sr-only">
            <li><% link_to 'Sign In', login_path %></li>
            <li><% link_to 'Sign Up', signup_path %></li>
          </div>

          <!-- TODO UGLY IN MOBILE VIEW -->
          <%= form_for :session, url: login_path, method: 'post' do |f| %>
            <%= f.email_field :email, placeholder: 'Email', type: 'email', class: 'form-control' %>
            <%= f.password_field :password, placeholder: 'Password', type: 'password', class: 'form-control' %>
            <%= f.submit 'Sign In', class: 'btn btn-success' %>
            <%= link_to 'New Account', signup_path, method: 'get', class: 'btn btn-secondary' %>
          <% end %>

        </div>

        <% end %>

      </ul>
    </div>
  </div>
</nav>
